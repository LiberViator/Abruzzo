---
import Title from "../components/Title.astro";
import ProductCard from "../components/ProductCard.astro";
---

<section id="produkty" class="overflow-hiddenpy-12">
	<div class="mx-auto flex w-full max-w-4xl flex-col items-center overflow-visible">
		<Title title="Nasze produkty" />

		<div class="slider mb-8 w-full">
			<div class="paddings grid grid-cols-[repeat(3,minmax(min(256px,100%),320px))] gap-4 lg:gap-8">
				<ProductCard
					icon="/assets/images/gear.svg"
					title="Comarch ERP Optima Płace i Kadry"
					desc="Dopasowane do potrzeb, kompleksowe zarządzanie procesami biznesowymi w przedsiębiorstwie."
					price="1625.00 zł"
					cta
				/>
				<ProductCard
					icon="/assets/images/robot.svg"
					title="Comarch IBARD ERP Backup 10GB"
					desc="Automatyzacje powtarzalnych i nieproduktywnych czynności wykonywanych przez człowieka."
					price="1625.00 zł"
					cta
				/>
				<ProductCard
					icon="/assets/images/support.svg"
					title="Comarch ERP OPTIMA - Pakiet START Firma"
					desc="Wsparcie, doradctwo i opieka w zakresie systemów teleinformatycznych."
					price="1625.00 zł"
					cta
				/>
			</div>
		</div>

		<a class="font-semibold text-abruzzo-blue-500" href="https://abruzzo.com.pl/oprogramowanie/">Zobacz wszyskie produkty</a>
	</div>
	<script src="../scripts/slider.js"></script>
</section>
