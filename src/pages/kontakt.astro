---
import "/src/main.css";

import Layout from "../layouts/Layout.astro";
import PageHeader from "../layouts/PageHeader.astro";
import Header from "../layouts/Header.astro";
import ProductProfile from "../layouts/ProductProfile.astro";
import Footer from "../layouts/Footer.astro";
---

<Layout>
	<Header />
	<PageHeader />
	<main>
		<form action="">
			<fieldset>
				<input type="text" name="name" /><input type="email" name="email" />
			</fieldset>
			<fieldset>
				<input type="text" name="subject" />
				<textarea name="message" id="" cols="30" rows="10"></textarea>
			</fieldset>
			<div>
				<input
					id="agreement"
					type="checkbox"
					name="agreement"
					value="true"
					data-required=""
					class="field-error"
				/>
				<label for="agreement"
					>Oświadczam, że zapoznałem się z <a href="#">Polityką prywatności</a> i
					akceptuję jej postanowienia. Moje dane osobowe, wskazane w formularzu,
					będą przetwarzane w celu udzielenia odpowiedzi na przesłane zapytanie.</label
				>
			</div>
		</form>
	</main>
	<Footer />
</Layout>

